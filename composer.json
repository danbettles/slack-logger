{
    "name": "danbettles/slack-logger",
    "description": "A simple but effective PSR-compliant logger that sends log-entries to a Slack incoming webhook",
    "type": "library",
    "license": "ISC",
    "authors": [
        {
            "name": "Daniel Bettles",
            "email": "danbettles@yahoo.co.uk"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-curl": "*",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.4.1",
        "squizlabs/php_codesniffer": "^3.10.3",
        "danbettles/codesniffer-standard": "^2.0",
        "phpstan/phpstan": "^1.12"
    },
    "autoload": {
        "psr-4": {"DanBettles\\SlackLogger\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"DanBettles\\SlackLogger\\Tests\\": "tests/src/"}
    },
    "scripts": {
        "app:test": "phpunit --bootstrap=vendor/autoload.php --colors=always tests/",
        "app:analyse": "phpstan analyse --level=max --ansi src/ tests/",
        "app:lint": "phpcs",
        "app:check-quality": [
            "@app:test",
            "@app:analyse",
            "@app:lint"
        ]
    }
}
